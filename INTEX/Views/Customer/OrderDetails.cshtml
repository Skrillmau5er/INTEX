@model IEnumerable<INTEX.Models.WorkOrder>
@{
    ViewBag.Title = "Order Details";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<h2>Order Details</h2>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Compound.CompoundName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Compound.CompoundName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Order.OrderID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Order.OrderID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status.StatusDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status.StatusDescription)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DueDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DueDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SummaryReport)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SummaryReport)
        </dd>
    </dl>
</div>

@foreach (var item in Model)
{
    if (item.OrderID == ViewBag.ID)
    {
        <div class="col-md-6" style="text-align:right">
            Compound
        </div>

        <div class="col-md-6" style="text-align:left">
            @item.Compound.CompoundName
        </div>

        <div class="col-md-6" style="text-align:right">
            Work Order Status:
        </div>

        <div class="col-md-6" style="text-align:left">
            <strong>
                <u>
                    @item.Status.StatusDescription
                </u>
            </strong>
        </div>
    }
}
</div>
